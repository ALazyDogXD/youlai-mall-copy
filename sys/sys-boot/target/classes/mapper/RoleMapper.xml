<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alazydogxd.youlai.sys.boot.mapper.RoleMapper">

    <resultMap id="rolePathMap" type="com.alazydogxd.youlai.sys.boot.entity.RolePathDO">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <collection property="paths" ofType="string" javaType="list">
            <result column="url_perm"/>
        </collection>
    </resultMap>

    <select id="getRolePath" resultMap="rolePathMap">
        SELECT ${ew.sqlSelect}
        FROM sys_role r
                LEFT JOIN sys_role_permission rp
                        ON r.id = rp.role_id
                LEFT JOIN sys_permission p
                        ON p.id = rp.permission_id
                LEFT JOIN sys_permission_path pp
                        ON pp.permission_id = p.id
                LEFT JOIN sys_path pa
                        ON pa.id = pp.path_id
        WHERE p.type = 2
        <if test="ew != null and ew.customSqlSegment != null and ew.customSqlSegment != ''">
            AND
            <trim prefixOverrides="WHERE">
                ${ew.customSqlSegment}
            </trim>
        </if>
    </select>

    <select id="getRoleCodes" resultType="string">
        SELECT r.code AS code
        FROM sys_user u
                LEFT JOIN sys_user_role ur
                        ON u.id = ur.user_id
                        <if test="userId != null">
                            AND u.id = #{userId}
                        </if>
                LEFT JOIN sys_role r
                        ON ur.role_id = r.id
        <if test="ew != null and ew.customSqlSegment != null and ew.customSqlSegment != ''">
            WHERE ${ew.customSqlSegment}
        </if>
    </select>

</mapper>